<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      color: #333;
    }
    h1 {
      text-align: center;
      margin-top: 20px;
    }
    ul {
      list-style-type: none;
      padding: 0;
      display: flex;
      flex-wrap: wrap;
    }
    li {
      background: #fff;
      margin: 10px;
      padding: 15px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .no-users {
      text-align: center;
      font-size: 2em;
      color: #999;
    }
  </style>
</head>
<body>
  <h1><%= title %></h1>
  <% if (users.length === 0) { %>
    <p class="no-users">No users found</p>
  <% } else { %>
    <ul id="user-list">
      <% users.forEach(user => { %>
        <li><strong><%= user.username %></strong> (<%= user.email %>)</li>
      <% }) %>
    </ul>
  <% } %>

  <script>
    // Function to fetch new users from the server
    async function fetchUsers() {
      try {
        const response = await fetch('/'); // Assumes the endpoint is /users
        const html = await response.text(); // Retrieve the HTML content

        // Create a new DOM parser to parse the returned HTML and extract user list
        const parser = new DOMParser();
        const doc = parser.parseFromString(html, 'text/html');
        const newUserList = doc.getElementById('user-list') ? doc.getElementById('user-list').innerHTML : '';

        // Update the current user list with new content
        if (newUserList !== document.getElementById('user-list').innerHTML) {
          // Show a notification when new users are added
          const notification = new Notification('New users!', {
            body: 'New users have been added to the list!'
          });

          setTimeout(() => {
            document.getElementById('user-list').innerHTML = newUserList;
            notification.close();
          }, 1000);
        }
      } catch (error) {
        console.error('Error fetching users:', error);
      }
    }

    setInterval(fetchUsers, 1000);
  </script>
</body>
</html>

